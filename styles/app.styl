//.notif-bar.ng-hide-add, .notif-bar.ng-hide-remove
.notif-bar.ng-hide-add
  -webkit-transition:all linear 0.5s;
  -moz-transition:all linear 0.5s;
  -o-transition:all linear 0.5s;
  transition:all linear 0.5s;
  display:block!important;

.notif-bar.ng-hide-add.ng-hide-add-active,
.notif-bar.ng-hide-remove
  opacity:0;

.notif-bar.ng-hide-add,
.notif-bar.ng-hide-remove.ng-hide-remove-active
  opacity:1;

markdown.task-text p
  color #000
  font inherit
  display inline-block

for $stage in (worst $worst) (worse $worse) (bad $bad) (neutral $neutral) (good $good) (better $better) (best $best)
  .color-{$stage[0]} > .item-content
    background-color: $stage[1]
.completed > .item-content
  background-color: $completed
  p {color: #999;}
.task-reward > .item-content {background-color: white !important;}

.herobox
  margin 5px auto
  outline none
  margin-bottom 0
.avatar-level
  padding 4px
.full .herobox:after {opacity: 1}
.hero-stats
  display block
  padding 0
  margin 0 4px
  .meter-text
    z-index 100
.meter
  margin 0 !important
  padding 0
  height: 25px
  // color taken from default ionic coulours,
  // applying class balanced-color doesn't work
  border: 1px solid #498f24

.shop_gold, .shop_silver
  display inline-block
  vertical-align top
.toolbar-wallet
  font-size 0.9em
  display block
  text-align center

  &> span
    display: inline-block
    height: 23px

.menu-avatar .item-content
  padding 5px
  background-color #e5ebed
.profile-background
  background-color #e5ebed

.avatar-box
  padding-bottom 0
  vertical-align top
.rewards-wallet
  overflow: hidden
  margin: 0 auto
  min-width: 30px
  text-align: center
  text-overflow: ellipsis
  white-space: nowrap
  padding 5px

.customize-content .item
  overflow-x: scroll
  -webkit-overflow-scrolling: touch

.pull-left {float:left;}
.pull-right {float:right;}
.shop-sprites
  margin: 4px 20px 4px 4px;
  td {vertical-align: middle;}

.exp-and-gold
  //border-left 1px solid white
  //padding: 13px 0
  margin: 0 8px

.muted *
  color: grey !important

.stable-pet-icon
  float: left

.stable-pet-not-owned-icon
  float: left

.inventory-item-icon
  float: left
  margin-right: 5px

  &.locked
    background-color: #727272


.costume-list
  margin-bottom: 0px
