script(id='views/auth.html',type='text/ng-template')
  ion-pane
    ion-header-bar.bar-stable
      h1.title Login
    ion-content
      div(ui-view='')

script(id='views/auth.login.html',type='text/ng-template')
  form(ng-submit='auth()')
    .list.list-inset
      label.item.item-input
        input(type='text', placeholder='Username', ng-model='login.username')
      label.item.item-input
        input(type='password', placeholder='Password', ng-model='login.password')
    .padding
      button.button.button-block.button-positive(type='submit') Login
      button.button.icon-left.ion-social-facebook.button-block.button-positive Facebook
      button.button.button-block.button-positive Register

  //-
    .login
      .login-header
        img(src='assets/home-logo.png', width='79%')
      .login-form
        form(ng-submit='auth()')
          input.login-input.username(type='text', ng-model='login.username', placeholder='{{useUUID ? "UUID" : "Username"}}')
          input.login-input.password(type='{{useUUID ? "text" : "password"}}', ng-model='login.password', placeholder='{{useUUID ? "API Token" : "Password"}}')
          input.btn-homescreen.btn-login(type='submit', value='Login')
          input.btn-homescreen.btn-signup(type='button', value='Signup', ui-sref='auth.register')
      .use-facebook
        label.topcoat-checkbox__label
          // note ng-model is required for ng-change on checkbox?
          input(type='checkbox', ng-model='nothing', ng-change='toggleUUID()')
          .topcoat-checkbox
          | Login with Facebook or API Token

script(id='views/auth.register.html',type='text/ng-template')
  //-
    .login
      .login-header
        img(src='assets/home-logo.png', width='79%')
      .register-form
        form(ng-submit='register()', name='registrationForm')
          a.register-cancel(ui-sref='auth.login') < Go Back
          input.login-input.username(type='text', ng-model='registerVals.username', placeholder='Username', required='required')
          input.login-input.email(type='email', ng-model='registerVals.email', placeholder='Email', required='required')
          input.login-input.password(type='password', ng-model='registerVals.password', placeholder='Password', required='required')
          input.login-input.password-confirm(type='password', ng-model='registerVals.confirmPassword', placeholder='Password Confirm', required='required')
          input.btn-homescreen.btn-signup(type='submit', value='Register')