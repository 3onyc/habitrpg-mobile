<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:cdv   = "http://cordova.apache.org/ns/1.0"
        id          = "com.habitrpg.HabitRPG"
        versionCode = "1"
        version     = "0.0.1">

    <!-- versionCode is optional and Android only -->

    <name>HabitRPG</name>

    <access origin="*" />

    <description>
       Habit tracking which treats your goals like a Role Playing Game. Level up as you succeed, lose HP as you fail, earn money to buy weapons and armor.
    </description>

    <author email="admin@habitrpg.com" href="https://habitrpg.com">
        HabitRPG
    </author>

    <preference name="orientation" value="portrait" />
    <preference name="webviewbounce" value="true" />

    <feature name="http://api.phonegap.com/1.0/network"/>

    <!-- Resourcs -->
    <icon src="icon.png" />
    <gap:splash src="splash.png" />


</widget>